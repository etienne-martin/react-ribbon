{
  "name": "react-ribbon",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --color",
    "test": "turbo run test --color",
    "dev": "turbo run dev --color",
    "start": "turbo run start --color",
    "type-check": "turbo run type-check --color",
    "lint": "eslint ./ --ext js,jsx,ts,tsx,json --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "deploy": "turbo run deploy --color"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@types/react": "^16.9.0",
    "concurrently": "^4.1.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "turbo": "^1.3.4",
    "typescript": "^4.8.3"
  }
}
